@{
    ViewBag.Title = "Nic's File Checker";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="text-center" style="font-weight: bold;">Status: <span id="status" class="label label-info">Ready to start!</span></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="form-group">
                <label for="csv">CSV:</label>
                <textarea class="form-control" rows="3" id="csv" placeholder="Enter list here..." style="width:100% !important"></textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="form-group">
                <label for="logWell">Log:</label>
                <div class="well well-sm pre-scrollable" id="logWell" style="min-height: 350px">
                    <span id="log"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 text-right"></div>
        <div class="col-xs-8 text-right">
            <input type="button" id="start" value="Start" class="btn btn-success" />
            <input type="button" id="stop" value="Stop" class="btn btn-danger" />
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/Scripts/nfc.js")
}